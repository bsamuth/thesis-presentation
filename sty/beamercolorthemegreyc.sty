\setbeamercolor*{title page header}{fg=white}
\setbeamercolor*{author}{fg=white}
\setbeamercolor*{date}{fg=white}

\setbeamercolor*{structure}{fg=greyc}

% Title slide
\setbeamercolor*{titlelike}{fg=white, bg=greyc}
\setbeamercolor*{subtitle}{parent=title}
\setbeamercolor*{author}{parent=title}
\setbeamercolor*{institute}{parent=title}
\setbeamercolor*{date}{parent=title}
\setbeamercolor*{email}{parent=title}
\setbeamercolor*{web}{parent=title}
